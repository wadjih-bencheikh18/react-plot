{
  "compilerOptions": {
    "declaration": false,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "lib",
    "removeComments": false,
    "sourceMap": false,
    "strict": true,
    "target": "es2019"
  },
  "include": [
    "src/**/*",
    "stories/**/*",
    "tests/**/*",
    "playwright.config.ts",
    "playwright"
  ],
  "exclude": ["node_modules"]
}
